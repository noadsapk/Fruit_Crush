<vector xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    android:width="108dp"
    android:height="108dp"
    android:viewportWidth="108"
    android:viewportHeight="108">
    
    <!-- Background: Warm Radial Gradient (Deep Orange to Darker) -->
    <path
        android:pathData="M0,0h108v108h-108z">
        <aapt:attr name="android:fillColor">
            <gradient
                android:centerX="54"
                android:centerY="54"
                android:gradientRadius="76"
                android:type="radial">
                <item android:offset="0.0" android:color="#FFFF7043"/> <!-- Lighter Orange -->
                <item android:offset="1.0" android:color="#FFE64A19"/> <!-- Darker Orange -->
            </gradient>
        </aapt:attr>
    </path>

    <!-- Decorative Rays (Subtle burst) -->
    <path
        android:fillColor="#FFFFFF"
        android:fillAlpha="0.2"
        android:pathData="M54,0 L60,54 L54,108 L48,54 Z M0,54 L54,60 L108,54 L54,48 Z" />

    <!-- Main Bubble (Red/Pink - The Target) -->
    <path
        android:pathData="M54,54 m-30,0 a30,30 0 1,1 60,0 a30,30 0 1,1 -60,0">
        <aapt:attr name="android:fillColor">
            <gradient
                android:centerX="54"
                android:centerY="40"
                android:gradientRadius="30"
                android:type="radial">
                <item android:offset="0.0" android:color="#FFFF8A80"/> <!-- Light Red -->
                <item android:offset="1.0" android:color="#FFD32F2F"/> <!-- Red -->
            </gradient>
        </aapt:attr>
    </path>
    <!-- Main Bubble Highlight -->
    <path
        android:fillColor="#FFFFFF"
        android:fillAlpha="0.7"
        android:pathData="M40,35 a10,10 0 0,1 15,-5 a12,12 0 0,0 -12,12" />

    <!-- Secondary Bubble (Amber - Score) -->
    <path
        android:pathData="M80,80 m-12,0 a12,12 0 1,1 24,0 a12,12 0 1,1 -24,0">
        <aapt:attr name="android:fillColor">
            <gradient
                android:centerX="75"
                android:centerY="75"
                android:gradientRadius="12"
                android:type="radial">
                <item android:offset="0.0" android:color="#FFFFE082"/> <!-- Light Amber -->
                <item android:offset="1.0" android:color="#FFFFA000"/> <!-- Amber -->
            </gradient>
        </aapt:attr>
    </path>
    
    <!-- Third Bubble (Green - Bonus?) -->
    <path
        android:pathData="M25,30 m-8,0 a8,8 0 1,1 16,0 a8,8 0 1,1 -16,0">
        <aapt:attr name="android:fillColor">
            <gradient
                android:centerX="22"
                android:centerY="27"
                android:gradientRadius="8"
                android:type="radial">
                <item android:offset="0.0" android:color="#FFB9F6CA"/> <!-- Light Green -->
                <item android:offset="1.0" android:color="#FF00C853"/> <!-- Green -->
            </gradient>
        </aapt:attr>
    </path>

    <!-- Sparkles -->
    <path
        android:fillColor="#FFFFFF"
        android:pathData="M80,20 l2,0 l0,2 l-2,0 l0,-2 z M20,80 l3,0 l0,3 l-3,0 l0,-3 z" />

</vector>